<VBox alignment="CENTER" prefHeight="367.0" prefWidth="650.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="time.line.timeline.TimeLineController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
