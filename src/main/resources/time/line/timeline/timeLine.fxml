         <Label layoutX="431.0" layoutY="7.0" prefHeight="42.0" prefWidth="27.0" text="1900&#10;&#10;" textAlignment="RIGHT" />
         <Label layoutX="537.0" layoutY="7.0" prefHeight="42.0" prefWidth="132.0" text="1960 a 1970&#10;RevoluciónIndustrial 3.0" textAlignment="CENTER" wrapText="true" />
         <Label layoutX="677.0" layoutY="7.0" prefHeight="42.0" prefWidth="132.0" text="2011 a 2020&#10;RevoluciónIndustrial 4.0" textAlignment="CENTER" wrapText="true" />
      </children>
   </AnchorPane>
   <Slider fx:id="slTimeLine" blockIncrement="0.0" max="2100.0" min="1700.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="10.0" prefWidth="890.0" />
</VBox>
